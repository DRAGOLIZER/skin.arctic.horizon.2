<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_Furniture_List_Bottom">
        <control type="group">
            <visible>$EXP[Exp_ListViews]</visible>
            <include content="View_Row_Divider">
                <height>720</height>
            </include>
        </control>
        <include>View_053_Square_List</include>
        <include>View_054_Landscape_List</include>
        <include>View_055_Episode_List</include>
    </include>

    <include name="View_053_Square_List">
        <definition>
            <control type="group">
                <visible>Control.IsVisible(53)</visible>
                <include>Dimension_View</include>
                <include content="Object_BigPoster">
                    <param name="icon" value="$INFO[ListItem.Icon]" />
                    <bottom>0</bottom>
                    <right>0</right>
                    <width>480</width>
                    <height>480</height>
                </include>
                <control type="group">
                    <right>480</right>
                    <height>480</height>
                    <bottom>0</bottom>
                    <include content="Object_GlassPanel">
                        <right>40</right>
                        <include content="List_MediaList">
                            <param name="id" value="53" />
                            <param name="itemlayout_h" value="80" />
                            <left>-40</left>
                            <right>-40</right>
                        </include>
                    </include>
                </control>
            </control>
        </definition>
    </include>
    <include name="View_054_Landscape_List">
        <definition>
            <control type="group">
                <visible>Control.IsVisible(54)</visible>
                <include>Dimension_View</include>
                <include content="Object_BigPoster">
                    <param name="icon" value="$VAR[Image_Landscape]" />
                    <bottom>0</bottom>
                    <right>0</right>
                    <width>853</width>
                    <height>480</height>
                </include>
                <control type="group">
                    <right>853</right>
                    <height>480</height>
                    <bottom>0</bottom>
                    <include content="Object_GlassPanel">
                        <right>40</right>
                        <include content="List_MediaList">
                            <param name="id" value="54" />
                            <param name="itemlayout_h" value="80" />
                            <left>-40</left>
                            <right>-40</right>
                        </include>
                    </include>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_055_Episode_List">
        <definition>
            <control type="group">
                <visible>Control.IsVisible(55)</visible>
                <include>Dimension_View</include>
                <include content="Object_BigPoster">
                    <param name="icon" value="$VAR[Image_Landscape]" />
                    <bottom>0</bottom>
                    <right>0</right>
                    <width>853</width>
                    <height>480</height>
                </include>
                <control type="group">
                    <right>853</right>
                    <height>480</height>
                    <bottom>0</bottom>
                    <include content="Object_GlassPanel">
                        <right>40</right>
                        <include content="List_EpisodeList">
                            <param name="id" value="55" />
                            <preloaditems>0</preloaditems>
                            <left>-80</left>
                            <right>-40</right>
                        </include>
                    </include>
                </control>
            </control>
        </definition>
    </include>
</includes>