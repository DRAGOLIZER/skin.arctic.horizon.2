                    <bottom>0</bottom>
                    <right>0</right>
                    <width>480</width>
                    <height>480</height>
                </include>
                <control type="group">
                    <right>480</right>
                    <height>480</height>
                    <bottom>0</bottom>
                    <include content="Object_GlassPanel">
                        <right>40</right>
                        <include content="List_MediaList">
                            <param name="id" value="53" />
                            <param name="itemlayout_h" value="80" />
                            <left>-40</left>
                            <right>-40</right>
                        </include>
                    </include>
                </control>
            </control>
        </definition>
    </include>
    <include name="View_054_Landscape_List">
        <definition>
            <control type="group">
                <visible>Control.IsVisible(54)</visible>
