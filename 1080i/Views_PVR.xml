    <!-- Recordings / Timers / Search -->
    <include name="View_PVR_RecordingInfo">
        <param name="id" default="50" />
        <param name="scrollbar_id" default="60" />
        <param name="path_label" default="$INFO[Container.FolderPath]" />
        <param name="item_label" default="$INFO[Container.NumItems,, $LOCALIZE[127]]" />
        <param name="has_scrollbar" default="true" />
        <param name="has_itemlabel" default="true" />
        <definition>
            <control type="group">
                <width>50%</width>
                <nested />
                <control type="label">
                    <haspath>true</haspath>
                    <top>0</top>
                    <height>100</height>
                    <right>120</right>
                    <textoffsetx>40</textoffsetx>
                    <font>font_hintlabel</font>
                    <label>$PARAM[path_label]</label>
                </control>
                <include content="Object_Control" condition="$PARAM[has_itemlabel]">
                    <param name="control" value="label" />
                    <top>0</top>
                    <height>100</height>
                    <textoffsetx>40</textoffsetx>
                    <font>font_hintlabel</font>
                    <align>right</align>
                    <label>$PARAM[item_label]</label>
                </include>
                <include content="Object_Separator">
                    <param name="horizontal" value="true" />
                    <top>100</top>
                    <left>40</left>
                    <right>40</right>
                </include>
                <include content="List_AddonCategories">
                    <param name="id" value="$PARAM[id]" />
                    <param name="detailed" value="true" />
                    <param name="width" value="" />
                    <top>120</top>
                    <bottom>40</bottom>
                    <onleft>$PARAM[onleft]</onleft>
                    <onright>$PARAM[onright]</onright>
                    <pagecontrol>$PARAM[scrollbar_id]</pagecontrol>
                    <include>$PARAM[include_content]</include>
                </include>
                <include content="Dialog_Scrollbar" condition="$PARAM[has_scrollbar]">
                    <param name="id" value="$PARAM[scrollbar_id]" />
                    <left>0</left>
                    <right>$PARAM[id]</right>
                </include>
            </control>
        </definition>
    </include>

    <include name="View_PVR_RecordingSubList">
        <visible>Container(50).ListItem.IsFolder</visible>
        <content>$INFO[Container(50).ListItem.FolderPath]</content>
    </include>


    <include name="View_PVR_RecordingDetails">
        <control type="group">
            <visible>!Container(50).ListItem.IsFolder</visible>
            <top>120</top>
            <bottom>40</bottom>
            <left>40</left>
            <right>40</right>
            <control type="image">
                <top>20</top>
                <height>170</height>
                <right>0</right>
                <aspectratio align="right">keep</aspectratio>
                <texture colordiffuse="dialog_fg_70">$INFO[ListItem.Icon]</texture>
                <visible>String.StartsWith(ListItem.Icon,Default)</visible>
            </control>
            <control type="image">
                <top>20</top>
                <height>170</height>
                <right>0</right>
                <aspectratio align="right">keep</aspectratio>
                <texture>$INFO[ListItem.Icon]</texture>
                <visible>!String.StartsWith(ListItem.Icon,Default)</visible>
            </control>
            <control type="grouplist">
                <orientation>vertical</orientation>
                <control type="label">
                    <height>80</height>
                    <label>$INFO[ListItem.ChannelName]</label>
                    <font>font_small_bold</font>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.StartDate]</label>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.Duration(h),, hours ]$INFO[ListItem.Duration(m),, minutes]</label>
                </control>
                <control type="group">
                    <height>60</height>
                    <include content="Object_Separator_V">
                        <centertop>50%</centertop>
                    </include>
                </control>
                <control type="label">
                    <top>-20</top>
                    <height>80</height>
                    <label>$INFO[ListItem.Title]</label>
                    <font>font_small_bold</font>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.Season,S]$INFO[ListItem.Episode,E, ]$INFO[ListItem.EpisodeName]</label>
                    <visible>!String.IsEmpty(ListItem.EpisodeName)</visible>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.EPGEventTitle]</label>
                    <visible>!String.IsEmpty(ListItem.EPGEventTitle)</visible>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.Genre]</label>
                    <visible>!String.IsEmpty(ListItem.Genre)</visible>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.Size]</label>
                    <visible>!String.IsEmpty(ListItem.Size) + !String.IsEqual(ListITem.Size,0 B)</visible>
                </control>
                <control type="label">
                    <height>40</height>
                    <label>$INFO[ListItem.ExpirationDate] $INFO[ListItem.ExpirationTime]</label>
                    <visible>!String.IsEmpty(ListItem.ExpirationDate)</visible>
                </control>
                <control type="textbox">
                    <top>40</top>
                    <height>auto</height>
                    <label>$INFO[ListItem.Plot]</label>
                    <font>font_plotbox</font>
                </control>
            </control>
        </control>
    </include>
</includes>