    <menucontrol>9000</menucontrol>
    <include content="Action_Blur_Onload">
        <param name="sourceimage" value="Art(fanart)" />
    </include>
    <controls>

        <include>Background_Main</include>
        <control type="group">
            <include>Animation_Common</include>
            <include>Dimension_Info</include>
            <control type="group">
                <visible>Control.IsVisible(10) | Control.IsVisible(51)</visible>
                <include content="Info_Panel">
                    <param name="plotwidth" value="1140" />
                    <param name="ratings" value="false" />
                    <param name="plotheight_nr" value="80" />
                </include>
            </control>
            <control type="group">
                <visible>Control.IsVisible(53)</visible>
                <width>1140</width>
                <control type="textbox">
                    <top>0</top>
                    <font>font_plotbox</font>
                    <label>[B][COLOR=main_fg_100]$INFO[ListItem.Label,, ]$INFO[ListItem.Season,S,]$INFO[ListItem.Episode,E, ][/COLOR][/B]$VAR[Label_Plot,~ ,]</label>
                    <textcolor>main_fg_70</textcolor>
                    <height>80</height>
                </control>
            </control>
            <include>View_010_PVRGuide_Info_SmallRow</include>
            <include>View_050_PVRGuide_Full_SmallRow</include>
            <include>View_051_PVRGuide_Info_LargeRow</include>
            <include>View_052_PVRGuide_Full_LargeRow</include>
            <include>View_053_PVRGuide_Peek_SmallRow</include>
        </control>

        <!-- Menu bar -->
        <include content="Furniture_Topbar_Group">
            <control type="group">
                <!-- <top>430</top> -->
                <!-- <left>480</left> -->
                <centerleft>50%</centerleft>
                <include>Animation_SlideIn_Dialog</include>
                <include>Animation_FadeOut</include>
                <width>760</width>
                <visible>!$EXP[Exp_InfoDialogs]</visible>
                <visible allowhiddenfocus="true">Control.HasFocus(11)</visible>
                <include content="Object_MenuBar_Group_Texture">
                    <param name="colordiffuse" value="main_fg_12" />
                    <param name="overlay" value="false" />
                    <left>0</left>
                    <right>0</right>
                    <height>60</height>
                    <centertop>50%</centertop>
                </include>
                <include content="Object_MenuBar_TextList">
                    <param name="id" value="11" />
                    <param name="color_nf" value="main_fg" />
                    <left>-20</left>
                    <right>0</right>
                    <ondown>10</ondown>
                    <onup>10</onup>
                </include>
            </control>
        </include>

        <include>Furniture_Top</include>
        <include content="Object_Options_Menu">
            <param name="grouplist_items" value="Items_MyEPGNav" />
            <param name="visible" value="!Window.IsVisible(DialogSelect.xml) + !Window.IsVisible(1114) + !Window.IsVisible(1113)" />
        </include>


    </controls>

</window>
