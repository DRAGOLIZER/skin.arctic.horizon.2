<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_Furniture_Wall">
        <control type="group">
            <visible>$EXP[Exp_WallViews]</visible>

            <!-- View -->
            <include content="Object_Control">
                <param name="control" value="group" />
                <include>View_520_Poster_Wall</include>
                <right>40</right>
                <left>40</left>
                <top>160</top>
                <bottom>160</bottom>
            </include>
        </control>

    </include>

    <include name="View_520_Poster_Wall">
        <control type="group">
            <visible>Control.IsVisible(520)</visible>
            <include content="List_Poster_Wall">
                <param name="id" value="520" />
                <param name="offset_y" value="40" />
                <preloaditems>0</preloaditems>
                <left>-40</left>
                <right>480</right>
                <top>0</top>
                <bottom>10</bottom>
                <pagecontrol>60</pagecontrol>
                <onleft>60</onleft>
            </include>
            <control type="scrollbar" id="60">
                <top>40</top>
                <bottom>40</bottom>
                <onright>520</onright>
                <centerleft>0</centerleft>
                <texturesliderbar colordiffuse="main_fg_100" border="4">scrollbar/scrollv.png</texturesliderbar>
                <animation effect="fade" start="100" end="0" time="400" condition="!Control.HasFocus(60)">Conditional</animation>
            </control>
            <include content="Object_BigPoster">
                <right>40</right>
                <top>40</top>
            </include>
        </control>
    </include>

</includes>