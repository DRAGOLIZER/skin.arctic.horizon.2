<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <include content="Furniture_Topbar_Group">
            <visible>!Window.IsVisible(DialogVolumeBar.xml) | Player.Muted</visible>
            <include content="Furniture_Gutters">
                <control type="group">
                    <width>60</width>
                    <right>0</right>
                    <control type="group">
                        <width>100</width>
                        <height>100</height>
                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <control type="image" description="Back">
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <texture>dialog/loading-back.png</texture>
                            <colordiffuse>main_fg_70</colordiffuse>
                        </control>
                        <control type="image" description="Icon">
                            <bordersize>30</bordersize>
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <texture>special://skin/extras/icons/info2.png</texture>
                            <colordiffuse>main_fg_70</colordiffuse>
                        </control>
                    </control>
                </control>
                <control type="group">
                    <right>row_height</right>
                    <include content="Furniture_MenuLabel">
                        <param name="id" value="401" />
                        <align>right</align>
                        <height>50%</height>
                        <top>0</top>
                    </include>
                    <include content="Furniture_MiniLabel">
                        <param name="id" value="402" />
                        <align>right</align>
                        <height>50%</height>
                        <bottom>0</bottom>
                    </include>
                </control>
            </include>
        </include>
    </controls>
</window>
