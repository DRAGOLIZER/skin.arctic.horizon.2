    <include name="Layout_Info_Poster">
        <param name="selected" default="false" />
        <param name="detailed" default="false" />
        <param name="diffuse" default="diffuse/poster-sml.png" />
        <definition>
            <control type="group">
                <width>$PARAM[item_w]</width>
                <height>$PARAM[item_h]</height>
                <include content="Object_Control" condition="$PARAM[selected]">
                    <param name="control" value="image" />
                    <param name="padding" value="true" />
                    <param name="pad" value="-1" />
                    <include>Texture_Box_Highlight_V</include>
                </include>
                <include condition="!$PARAM[selected]">Dialog_Box</include>
                <control type="image">
                    <texture background="true" diffuse="$PARAM[diffuse]">$VAR[Image_InfoPoster]</texture>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                </control>
                <include content="Object_Control">
                    <param name="control" value="image" />
                    <texture border="10" colordiffuse="bbffffff">diffuse/poster-sml-fade.png</texture>
                    <visible>$PARAM[detailed]</visible>
                </include>

                <include content="Object_Control">
                    <param name="control" value="group" />
                    <top>$PARAM[item_w]</top>
                    <visible>$PARAM[detailed]</visible>
                    <control type="textbox">
                        <textcolor>ffdedede</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <left>15</left>
                        <right>15</right>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font_statusbar_bold</font>
                        <height>60</height>
                        <bottom>20</bottom>
                        <visible>String.IsEmpty(ListItem.Label2)</visible>
                    </control>
                    <control type="label">
                        <textcolor>ffdedede</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <textoffsetx>15</textoffsetx>
                        <align>center</align>
                        <font>font_statusbar_bold</font>
                        <height>40</height>
                        <bottom>40</bottom>
                        <visible>!String.IsEmpty(ListItem.Label2)</visible>
                    </control>
                    <control type="label">
                        <textcolor>ffdedede</textcolor>
                        <label>$INFO[ListItem.Label2]</label>
                        <textoffsetx>15</textoffsetx>
                        <align>center</align>
                        <font>font_statusbar</font>
                        <height>20</height>
                        <bottom>20</bottom>
                        <visible>!String.IsEmpty(ListItem.Label2)</visible>
                    </control>
                </include>
                <include condition="!$PARAM[selected]">Dialog_Outline</include>
                <include>Object_Indicator</include>
                <include content="Object_SelectBox" condition="$PARAM[selected]">
                    <param name="indicator" value="true" />
                    <param name="focusbounce" value="true" />
                </include>
            </control>
        </definition>
    </include>

    <include name="Layout_AddonBrowser">
        <param name="selected" default="false" />
        <definition>
            <control type="group">
                <width>$PARAM[item_w]</width>
                <height>$PARAM[item_h]</height>
                <include content="Object_Control" condition="$PARAM[selected]">
                    <param name="control" value="image" />
                    <param name="padding" value="true" />
                    <param name="pad" value="-1" />
                    <include>Texture_Box_Highlight_V</include>
                </include>
                <include condition="!$PARAM[selected]">Dialog_Outline_Box</include>
