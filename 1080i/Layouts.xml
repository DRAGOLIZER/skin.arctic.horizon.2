                        <textcolor>main_fg_70</textcolor>
                        <selectedcolor>main_fg_70</selectedcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <font>font_small_bold</font>
                    </include>
                    <include content="Object_Control">
