                <control type="label">
                    <include condition="$PARAM[selected]">Color_SelectedText</include>
                    <textcolor>dialog_fg_70</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                    <top>$PARAM[item_w]</top>
                    <textoffsetx>20</textoffsetx>
                    <align>center</align>
                    <font>font_minilabel</font>
                </control>

                <include content="Object_SelectBox" condition="$PARAM[selected]">
                    <param name="indicator" value="false" />
                    <param name="focusbounce" value="true" />
                </include>
            </control>
        </definition>
    </include>

    <include name="Layout_Iconic_Pad"><left>20</left></include>
    <include name="Layout_Iconic">
        <param name="selected" default="false" />
        <definition>
            <include content="Object_Control" condition="$PARAM[selected] + !$PARAM[detailed]">
                <param name="control" value="button" />
                <visible allowhiddenfocus="true">false</visible>
                <animation effect="fade" start="0" end="0" time="500" reversible="false">Focus</animation>
                <onfocus condition="String.IsEmpty(Container($PARAM[id]).ListItem.Property(folderpath))">Container.Update($INFO[Container($PARAM[id]).ListItem.FolderPath],replace)</onfocus>
                <onfocus condition="!String.IsEmpty(Container($PARAM[id]).ListItem.Property(folderpath))">Container.Update($INFO[Container($PARAM[id]).ListItem.Property(folderpath)],replace)</onfocus>
            </include>
            <control type="group">
                <height>$PARAM[item_h]</height>
                <include content="Object_Control" condition="$PARAM[selected]">
                    <param name="control" value="image" />
                    <include>Texture_Highlight</include>
                </include>
                <control type="group">
                    <include condition="$PARAM[detailed]">Layout_Iconic_Pad</include>
                    <control type="group">
                        <width>$PARAM[item_h]</width>
                        <control type="image">
                            <texture background="true" fallback="DefaultFolder.png">$INFO[ListItem.Icon]</texture>
                            <aspectratio>keep</aspectratio>
                            <include content="Dimension_Padding"><param name="pad" value="10" /></include>
                            <visible>![String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)]</visible>
                        </control>
                        <control type="group">
                            <visible>[String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)]</visible>
                            <include content="Object_Control" condition="$PARAM[selected]">
                                <param name="control" value="image" />
                                <texture background="true" fallback="DefaultFolder.png">$INFO[ListItem.Icon]</texture>
                                <aspectratio>keep</aspectratio>
                            </include>
                            <include content="Object_Control" condition="!$PARAM[selected]">
                                <param name="control" value="image" />
                                <texture background="true" colordiffuse="dialog_fg_70" fallback="DefaultFolder.png">$INFO[ListItem.Icon]</texture>
                                <aspectratio>keep</aspectratio>
                            </include>
                        </control>
                    </control>
                    <control type="group">
                        <left>$PARAM[item_h]</left>
                        <control type="label">
                            <include condition="$PARAM[detailed]">Layout_Iconic_Pad</include>
                            <include condition="$PARAM[selected]">Color_SelectedText</include>
                            <textcolor>dialog_fg_70</textcolor>
                            <selectedcolor>dialog_fg_70</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <textoffsetx>0</textoffsetx>
                            <right>20</right>
                            <align>left</align>
                            <font>font_small</font>
                        </control>
                    </control>
                </control>
                <include content="Object_Control" condition="$PARAM[detailed]">
                    <param name="control" value="group" />
                    <right>40</right>
                    <width>24</width>
                    <include condition="!$PARAM[selected]">Object_IsSelected_Checkmark</include>
                    <include condition="$PARAM[selected]" content="Object_IsSelected_Checkmark">
                        <param name="color_off" value="$VAR[ColorSelected]" />
                        <param name="color_on" value="$VAR[ColorSelected]" />
                    </include>
                </include>
            </control>
        </definition>
    </include>

    <include name="Layout_Poster">
        <param name="detailed" default="false" />
        <param name="selected" default="false" />
        <param name="fg_layer" default="true" />
        <param name="bg_layer" default="true" />
        <param name="diffuse" default="diffuse/poster-std.png" />
        <param name="icon" default="$VAR[Image_Poster]" />
        <definition>
            <control type="group">
                <width>$PARAM[item_w]</width>
                <height>$PARAM[item_h]</height>
                <include content="Object_Control" condition="$PARAM[bg_layer]">
                    <param name="control" value="group" />
                    <include content="Object_ItemBack">
                        <param name="selected" value="$PARAM[selected]" />
                        <param name="shadow_colordiffuse" value="$PARAM[shadow_colordiffuse]" />
                    </include>
                    <control type="image">
                        <texture background="true" diffuse="$PARAM[diffuse]">$PARAM[icon]</texture>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                    </control>
                </include>
                <include content="Object_Control">
                    <param name="control" value="group" />
                    <visible>String.IsEqual(ListItem.DBType,actor) | String.IsEqual(ListItem.DBType,video) | $PARAM[detailed]</visible>
                    <include content="Object_Control" condition="$PARAM[bg_layer]">
                        <param name="control" value="image" />
                        <texture border="10" colordiffuse="bbffffff">diffuse/poster-sml-fade.png</texture>
                    </include>
                    <include content="Object_Control" condition="$PARAM[fg_layer]">
                        <param name="control" value="group" />
                        <top>$PARAM[item_w]</top>
                        <control type="textbox">
                            <textcolor>ffdedede</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <left>15</left>
                            <right>15</right>
                            <align>center</align>
                            <aligny>center</aligny>
                            <font>font_statusbar_bold</font>
                            <height>60</height>
                            <bottom>20</bottom>
                            <visible>String.IsEmpty(ListItem.Label2)</visible>
                        </control>
                        <control type="label">
                            <textcolor>ffdedede</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <textoffsetx>15</textoffsetx>
                            <align>center</align>
                            <font>font_statusbar_bold</font>
                            <height>40</height>
                            <bottom>40</bottom>
                            <visible>!String.IsEmpty(ListItem.Label2)</visible>
                        </control>
                        <control type="label">
                            <textcolor>b3dedede</textcolor>
                            <label>$INFO[ListItem.Label2]</label>
                            <textoffsetx>15</textoffsetx>
                            <align>center</align>
                            <font>font_statusbar</font>
                            <height>20</height>
                            <bottom>20</bottom>
                            <visible>!String.IsEmpty(ListItem.Label2)</visible>
                        </control>
                    </include>
                </include>
                <include condition="$PARAM[fg_layer] + !$PARAM[selected]">Object_Indicator</include>
                <include content="Object_SelectBox" condition="$PARAM[fg_layer] + $PARAM[selected]">
                    <param name="indicator" value="true" />
                    <param name="focusbounce" value="true" />
                </include>
            </control>
        </definition>
    </include>

