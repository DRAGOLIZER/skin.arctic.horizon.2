<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="Layout_SkinShortcuts">
        <param name="selected" default="false" />
        <definition>
            <include content="Object_Control" condition="$PARAM[selected]">
                <param name="control" value="image" />
                <include>Texture_Highlight</include>
            </include>
            <include content="Object_Control">
                <param name="control" value="image" />
                <width>80</width>
                <bordersize>10</bordersize>
                <include content="Object_Include" condition="$PARAM[selected]">
                    <texture background="true" colordiffuse="$VAR[ColorSelected]">$INFO[ListItem.Icon]</texture>
                </include>
                <texture background="true" colordiffuse="dialog_fg_70">$INFO[ListItem.Icon]</texture>
                <aspectratio>keep</aspectratio>
            </include>
            <include content="Object_Separator" condition="$PARAM[selected]">
                <left>80</left>
            </include>
            <include content="Object_Control">
                <param name="control" value="label" />
                <include condition="$PARAM[selected]">Color_SelectedText</include>
                <left>60</left>
                <width>400</width>
                <textoffsetx>40</textoffsetx>
                <textcolor>dialog_fg_70</textcolor>
                <selectedcolor>dialog_fg_70</selectedcolor>
                <label>$INFO[ListItem.Label]</label>
            </include>
        </definition>
    </include>

    <include name="Layout_DialogBasic">
        <param name="detailed" default="false" />
        <param name="selected" default="false" />
