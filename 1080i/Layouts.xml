                <control type="group">
                    <visible>![String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,season) | String.IsEqual(ListItem.DBType,set)]</visible>
                    <left>dialog_pad</left>
                    <right>dialog_pad</right>
                    <include content="Object_Control">
                        <param name="control" value="label" />
