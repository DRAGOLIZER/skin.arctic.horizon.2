<?xml version="1.0" encoding="UTF-8"?>
<window type="window">
    <defaultcontrol always="true">52</defaultcontrol>
    <controls>
        <include content="Background_Image">
            <param name="texture" value="special://skin/fanart.jpg" />
        </include>
        <control type="group">

            <control type="label">
                <height>80</height>
                <centertop>49%</centertop>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_overlay_title</font>
                <textcolor>$VAR[ColorHighlight]</textcolor>
                <label>[COLOR=panel_fg_70]Arctic[/COLOR] Horizon 2</label>
            </control>

            <control type="group">
                <top>570</top>
                <height>360</height>
                <control type="image">
                    <left>240</left>
                    <top>40</top>
                    <width>80</width>
                    <aspectratio>keep</aspectratio>
                    <height>120</height>
                    <texture colordiffuse="panel_fg_70" flipx="true">common/arrow-240.png</texture>
                    <visible>Container(52).HasPrevious</visible>
                </control>
                <control type="image">
                    <right>240</right>
                    <top>40</top>
                    <width>80</width>
                    <aspectratio>keep</aspectratio>
                    <height>120</height>
                    <texture colordiffuse="panel_fg_70" flipx="false">common/arrow-240.png</texture>
                    <visible>Container(52).HasNext</visible>
                </control>
                <control type="fixedlist" id="52">
                    <centerleft>50%</centerleft>
                    <width>1140</width>
                    <height>360</height>
                    <orientation>horizontal</orientation>
                    <focusposition>1</focusposition>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <itemlayout width="240">
                        <control type="group">
                            <top>40</top>
                            <centerleft>50%</centerleft>
                            <height>120</height>
                            <width>120</width>
                            <control type="image">
                                <texture colordiffuse="shadow_hard">shadows/circle_120-shadow-40.png</texture>
                                <include content="Dimension_Padding">
                                    <param name="pad" value="-40" />
                                </include>
                            </control>
                            <control type="image">
                                <texture colordiffuse="dialog_bg_100">diffuse/circle_120.png</texture>
                            </control>
                            <control type="image">
                                <include content="Dimension_Padding">
                                    <param name="pad" value="10" />
                                </include>
                                <aspectratio scalediffuse="false">scale</aspectratio>
                                <texture diffuse="diffuse/circle_120.png" fallback="DefaultArtist.png">$INFO[Listitem.Icon]</texture>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="640">
                        <control type="group">
                            <top>120</top>
                            <centerleft>50%</centerleft>
                            <height>120</height>
                            <width>120</width>
                            <control type="image">
                                <texture colordiffuse="shadow_hard">shadows/circle_120-shadow-40.png</texture>
                                <include content="Dimension_Padding">
                                    <param name="pad" value="-40" />
                                </include>
                            </control>
                            <control type="image">
                                <texture>special://profile/addon_data/script.texturemaker/ArcticHorizon/circle_v.png</texture>
                            </control>
                            <control type="image">
                                <include content="Dimension_Padding">
                                    <param name="pad" value="10" />
                                </include>
                                <aspectratio scalediffuse="false">scale</aspectratio>
                                <texture diffuse="diffuse/circle_120.png" fallback="DefaultArtist.png">$INFO[Listitem.Icon]</texture>
                            </control>
                        </control>

                        <control type="group">
                            <top>0</top>
                            <control type="label">
                                <align>center</align>
                                <height>40</height>
                                <font>font_small_bold</font>
                                <textcolor>main_fg_100</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="label">
                                <top>40</top>
                                <align>center</align>
                                <height>40</height>
                                <textcolor>main_fg_70</textcolor>
                                <label>$INFO[ListItem.Label2]</label>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <include>Furniture_Top_Right</include>
        </control>
    </controls>
</window>