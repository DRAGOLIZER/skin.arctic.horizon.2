<?xml version="1.0" encoding="UTF-8"?>
<window>
    <zorder>0</zorder>
    <visible>!Player.HasGame + !Window.IsVisible(DialogPlayerProcessInfo.xml) + !Window.IsVisible(DialogSlider.xml)</visible>
    <visible>VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)</visible>
    <visible>Window.IsActive(videoosd) | Window.IsActive(musicosd) | Player.Caching | Player.ShowInfo | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(DialogFullScreenInfo.xml) | !String.IsEmpty(Window(Home).Property(OSDInfo)) | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput)</visible>
    <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
    <animation effect="fade" end="0" start="100" time="300">WindowClose</animation>
    <animation effect="fade" start="0" end="100" time="300">VisibleChange</animation>
    <controls>
        <include content="Object_Control">
            <param name="control" value="image" />
            <texture colordiffuse="black">common/floor.png</texture>
        </include>
        <control type="group">
            <!-- <bottom>-80</bottom>
            <animation effect="slide" tween="cubic" easing="out" time="300" start="0" end="0,-80" reversible="false" condition="[Window.IsActive(videoosd) | Player.ShowInfo | Window.IsActive(DialogFullScreenInfo.xml) | !String.IsEmpty(Window(Home).Property(OSDInfo))]">Conditional</animation>
            <animation effect="slide" tween="cubic" easing="out" delay="200" time="300" end="0" start="0,-80" reversible="false" condition="![Window.IsActive(videoosd) | Player.ShowInfo | Window.IsActive(DialogFullScreenInfo.xml) | !String.IsEmpty(Window(Home).Property(OSDInfo))]">Conditional</animation> -->
            <include>OSD_Progress_Bar</include>
            <include>OSD_Progress_Labels</include>
            <include>OSD_Progress_Details</include>
        </control>
        <control type="group">
            <height>40</height>
            <left>view_pad</left>
            <right>view_pad</right>
            <bottom>view_pad</bottom>
            <align>center</align>
            <visible>!Window.IsVisible(videoosd)</visible>
            <!-- <visible>Player.ShowInfo | Window.IsActive(DialogFullScreenInfo.xml) | !String.IsEmpty(Window(Home).Property(OSDInfo))</visible> -->
            <animation effect="fade" start="0" end="100" time="300">Visible</animation>
            <animation effect="fade" end="0" start="100" time="300">Hidden</animation>
            <include content="OSD_Codecs">
                <centertop>50%</centertop>
            </include>
        </control>
        <include content="Furniture_Top_Right">
            <param name="icon" value="special://skin/extras/icons/videoplay.png" />
        </include>
    </controls>
</window>