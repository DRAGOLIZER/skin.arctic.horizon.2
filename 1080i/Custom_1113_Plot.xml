<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1113">
    <defaultcontrol always="true">61</defaultcontrol>
    <include>ACtion_Plotbox_OnUnload</include>
    <onload>SetProperty(TMDbHelper.ServicePause,1)</onload>
    <controls>

        <control type="group">
            <width>704</width>
            <include>Animation_Left_Delay</include>
            <include content="Object_BigPoster" condition="!$EXP[Exp_InfoDialogs]">
                <param name="icon" value="$INFO[Window.Property(Poster)]" />
                <include>Dimension_Info</include>
            </include>
        </control>

        <control type="group">
            <left>704</left>
            <include>Animation_Right_Delay</include>
            <include content="Object_Control" condition="[Skin.String(DividerStyle,Split) | Skin.String(DividerStyle,Solid)] + Skin.String(BackgroundStyle,Blur) + !$EXP[Exp_InfoDialogs]">
                <param name="control" value="image" />
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture background="true"  diffuse="diffuse/showcase-fanart.png" colordiffuse="main_flix">$INFO[Window.Property(Fanart)]</texture>
            </include>
            <include content="Object_DividerPanel" condition="[Skin.String(DividerStyle,Split) | Skin.String(DividerStyle,Solid)] + !$EXP[Exp_InfoDialogs]">
                <param name="shadow_left" value="true" />
            </include>
            <control type="group">
                <include content="Object_Include" condition="![Skin.String(DividerStyle,Split) | Skin.String(DividerStyle,Solid)]">
                    <left>0</left>
                </include>
                <include>Dimension_Info</include>
                <control type="label">
                    <aligny>center</aligny>
                    <height>80</height>
                    <label>$INFO[Window.Property(Title)]</label>
                    <textcolor>main_fg_90</textcolor>
                    <include content="Object_Include" condition="Skin.HasSetting(UseHeavyFont)">
                        <font>font_overlay_title_alt</font>
                    </include>
                    <font>font_overlay_title</font>
                    <visible>String.IsEmpty(Window.Property(ClearLogo)) | !Skin.HasSetting(TMDbHelper.EnableCrop)</visible>
                </control>
                <control type="image">
                    <height>80</height>
                    <aspectratio align="left">keep</aspectratio>
                    <texture background="true">$INFO[Window.Property(ClearLogo)]</texture>
                    <visible>!String.IsEmpty(Window.Property(ClearLogo)) + Skin.HasSetting(TMDbHelper.EnableCrop)</visible>
                </control>
                <include content="Object_Control">
                    <param name="control" value="textbox" />
                    <top>120</top>
                    <align>left</align>
                    <textcolor>main_fg_70</textcolor>
                    <font>font_overlay_plotbox</font>
                    <label fallback="19055">$INFO[Window.Property(Tagline),[B]$LOCALIZE[202][/B][CR],[CR][CR]]$INFO[Window.Property(Plot),[B]$LOCALIZE[31028][/B][CR],]$VAR[Label_OverlayCritics]</label>
                    <pagecontrol>61</pagecontrol>
                    <autoscroll delay="8000" time="4000" repeat="12000">false</autoscroll>
                </include>
                <control type="scrollbar" id="61">
                    <width>8</width>
                    <right>-80</right>
                    <!-- <centerright>-40</centerright> -->
                    <showonepage>true</showonepage>
                    <onright>Close</onright>
                    <onleft>Close</onleft>
                    <onup>Close</onup>
                    <ondown>Close</ondown>
                    <animation effect="fade" condition="!Control.HasFocus(61)" start="100" end="0" time="200">Conditional</animation>
                </control>
            </control>
        </control>

        <include condition="!$EXP[Exp_InfoDialogs]">Furniture_Top</include>

    </controls>
</window>