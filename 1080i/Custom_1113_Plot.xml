<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1113">
    <defaultcontrol always="true">61</defaultcontrol>
    <include>Action_Plotbox_OnUnload</include>
    <onload>SetProperty(TMDbHelper.ServicePause,1)</onload>
    <controls>
        <include content="Object_Overlay">
            <param name="delay" value="300" />
        </include>
        <control type="group">
            <include content="Animation_SlideIn_Dialog">
                <param name="windowopen_delay" value="600" />
            </include>
            <include>Animation_FadeOut</include>
            <width>1440</width>
            <include>Dimension_Context</include>
            <include content="Dialog_Header">
                <param name="id" value="8001" />
                <label>$INFO[Window.Property(Title)]</label>
            </include>

            <!-- Square Image -->
            <control type="group">
                <include content="Dialog_Background">
                    <param name="overlay" value="true" />
                    <param name="overlay_texture" value="$INFO[Window.Property(Fanart)]" />
                    <include content="Dialog_Context_Image">
                        <param name="diffuse" value="diffuse/poster_w435_h640.png" />
                        <param name="icon" value="$INFO[Window.Property(Poster)]" />
                        <param name="right" value="925" />
                    </include>
                </include>
            </control>

            <!-- Menu -->
            <control type="group">
                <right>0</right>
                <width>925</width>
                <include content="Object_MenuHeader">
                    <param name="label" value="$LOCALIZE[33029]" />
                </include>
                <include content="Object_Control">
                    <param name="control" value="textbox" />
                    <top>120</top>
                    <left>40</left>
                    <bottom>40</bottom>
                    <right>40</right>
                    <align>left</align>
                    <textcolor>dialog_fg_70</textcolor>
                    <font>font_plotbox</font>
                    <label fallback="19055">$INFO[Window.Property(Tagline),[B]$LOCALIZE[202][/B][CR],[CR][CR]]$INFO[Window.Property(Plot),[B]$LOCALIZE[31028][/B][CR],]$VAR[Label_OverlayCritics]</label>
                    <pagecontrol>61</pagecontrol>
                    <autoscroll delay="8000" time="4000" repeat="12000">false</autoscroll>
                </include>
                <include content="Dialog_Scrollbar">
                    <right>0</right>
                    <top>0</top>
                    <onright>Close</onright>
                    <onleft>Close</onleft>
                    <showonepage>true</showonepage>
                    <visible allowhiddenfocus="true">false</visible>
                </include>
            </control>
        </control>
    </controls>
</window>