<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_Furniture_Row_Background">
        <control type="group">
            <visible>$EXP[Exp_RowViews] | $EXP[Exp_CombinedViews]</visible>
            <include condition="Skin.String(ForegroundStyle,ClearArt)">View_ClearArt</include>
            <include condition="Skin.String(ForegroundStyle,FlixArt)">View_FlixArt</include>
            <include condition="Skin.String(ForegroundStyle,KeyArt)">View_KeyArt</include>
        </control>
    </include>

    <include name="View_Furniture_Row_Foreground">
        <control type="group">
            <visible>$EXP[Exp_RowViews]</visible>
            <include>View_Row_Divider</include>
            <include content="Info_Panel">
                <param name="plotwidth" value="880" />
                <param name="plotheight" value="80" />
                <param name="plotheight_nr" value="120" />
                <top>view_top</top>
                <width>1080</width>
                <left>view_pad</left>
            </include>
        </control>
        <include>View_050_Square_Row</include>
        <include>View_051_Landscape_Row</include>
        <include>View_052_Poster_Row</include>
    </include>

    <include name="View_Row_Divider">
        <include content="Object_Control" condition="Skin.String(DividerStyle,Split)">
            <param name="control" value="group" />
            <bottom>0</bottom>
            <height>row_height_x50</height>
            <include content="Object_DividerPanel">
                <param name="shadow_top" value="true" />
                <param name="flipy" value="true" />
                <bottom>-200</bottom>
                <left>-200</left>
                <right>-200</right>
            </include>
        </include>
        <include content="Object_Control" condition="Skin.String(DividerStyle,Split) | Skin.String(DividerStyle,Solid)">
            <param name="control" value="group" />
            <nested />
            <height>divider_bottom</height>
            <bottom>0</bottom>
            <include content="Object_DividerPanel">
                <param name="shadow_top" value="true" />
                <param name="shadow_bottom" value="true" />
                <top>0</top>
                <include content="Object_Include" condition="Skin.String(DividerStyle,Solid)">
                    <bottom>-200</bottom>
                </include>
                <bottom>160</bottom>
                <left>-200</left>
                <right>-200</right>
            </include>
        </include>
    </include>

    <include name="View_ClearArt">
        <include content="Object_Control" condition="Skin.String(BackgroundStyle,Blur) | Skin.String(BackgroundStyle,None)">
            <param name="control" value="image" />
            <bottom>divider_bottom</bottom>
            <right>view_pad</right>
            <top>view_top</top>
            <aspectratio align="right">keep</aspectratio>
            <fadetime>600</fadetime>
            <texture background="true">$VAR[Image_ClearArt]</texture>
        </include>
    </include>

    <include name="View_FlixArt">
        <include content="Object_Control">
            <param name="control" value="image" />
            <right>0</right>
            <bottom>divider_bottom</bottom>
            <width>924</width>
            <fadetime>1000</fadetime>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture background="true" diffuse="diffuse/showcase-fanart.png" colordiffuse="main_flix">$INFO[ListItem.Art(fanart)]</texture>
            <visible>$EXP[Exp_ShowSideArt]</visible>
            <visible>!String.IsEqual(Window(Home).Property(TMDbHelper.ListItem.BlurImage.Original),special://skin/fanart.jpg) | Skin.String(BackgroundStyle,None)</visible>
            <animation effect="fade" start="0" end="100" time="1000">Visible</animation>
            <animation effect="fade" start="100" end="0" time="150">Hidden</animation>
        </include>
    </include>

    <include name="View_KeyArt">
        <include content="Object_Control">
            <param name="control" value="image" />
            <right>0</right>
            <width>1000</width>
            <fadetime>1000</fadetime>
            <aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
            <texture background="true" diffuse="diffuse/showcase-fanart.png" colordiffuse="main_flix">$INFO[ListItem.Art(fanart)]</texture>
            <visible>$EXP[Exp_ShowSideArt]</visible>
            <visible>!String.IsEqual(Window(Home).Property(TMDbHelper.ListItem.BlurImage.Original),special://skin/fanart.jpg) | Skin.String(BackgroundStyle,None)</visible>
            <animation effect="fade" start="0" end="100" time="1000">Visible</animation>
            <animation effect="fade" start="100" end="0" time="150">Hidden</animation>
        </include>
    </include>

    <include name="View_050_Square_Row">
        <include content="List_Square_Row">
            <param name="id" value="50" />
            <height>divider_bottom</height>
            <bottom>40</bottom>
            <onup>menu</onup>
        </include>
    </include>
    <include name="View_051_Landscape_Row">
        <include content="List_Landscape_Row">
            <param name="id" value="51" />
            <height>divider_bottom</height>
            <bottom>40</bottom>
            <onup>menu</onup>
        </include>
    </include>
    <include name="View_052_Poster_Row">
        <include content="List_Poster_Row">
            <param name="id" value="52" />
            <height>divider_bottom</height>
            <bottom>40</bottom>
            <onup>menu</onup>
        </include>
    </include>
</includes>